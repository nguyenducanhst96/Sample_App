<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.Micropost.gravatar_size),
    micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= t ".posted" %> <%= time_ago_in_words(micropost.created_at) %> <%= t ".ago" %>
    <% if current_user?(micropost.user) %>
      <%= link_to t(".content_url_delete"), micropost, method: :delete,
        data: {confirm: t(".data_confirm_delete")} %>
    <% end %>
  </span>
</li>
