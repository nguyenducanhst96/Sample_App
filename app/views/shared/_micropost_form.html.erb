<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t(".content_placeholder") %>
  </div>
  <%= f.submit t(".content_submit"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: t(".picture_accept") %>
  </span>
<% end %>

<%= javascript_include_tag "micropost_form.js" %>
