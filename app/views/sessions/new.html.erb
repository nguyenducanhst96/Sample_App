<% provide :title, t(".title_new") %>
<h1><%= t ".heading_new" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= link_to  t(".content_url_forgot_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span><%= t ".label_checkbox" %></span>
      <% end %>
      
      <%= f.submit t(".content_button_login"), class: "btn btn-primary" %>
    <% end %>

    <p><%= t ".new_user" %> <%= link_to t(".title_url_sign_up"), signup_path %></p>
  </div>
</div>
